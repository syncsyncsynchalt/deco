<%- for announcement in @announcements -%>
  <%- cnt = cnt + 1 -%>

<style type="text/css">
</style>

<script type="text/javascript">
announcement_body_flg_<%= cnt %> = 0;

function display_<%= cnt %> () {
  if (announcement_body_flg_<%= cnt %> == 0) {
    $("#announcement_body_<%= cnt %>").append("<div id=\"annoucement_body_block_<%= cnt %>\">" +
                                              "<%= announcement.body.gsub("\r\n", "<br>\" +\r\n\"") %>&nbsp;<br><br>" +
                                              "</div>");
    announcement_body_flg_<%= cnt %> = 1;
  } else {
    announcement_body_flg_<%= cnt %> = 0;
    $("#annoucement_body_block_<%= cnt %>").remove();
  }
}
</script>
      <div id="announcement_title" onclick="display_<%= cnt %>()"><%= h announcement.updated_at.strftime('%Y/%m/%d %H:%M') %>　<%= announcement.title %></div><br>
<div id='announcement_body_<%= cnt %>'></div>
<%- end -%>
<%- if cnt == 0 -%>
  現在、お知らせはありません。<br>
<%- end -%>
