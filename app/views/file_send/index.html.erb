      <div class="input-top"><%= f.text_field :receive_password,  :class => 'validate[required, custom[password], minSize[' +
        $app_env['PW_LENGTH_MIN'] + '] , maxSize[' +
        $app_env['PW_LENGTH_MAX'] + ']]' %>
