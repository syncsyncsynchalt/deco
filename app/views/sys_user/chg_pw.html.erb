<script type="text/javascript">

localDomains = ""

$(document).ready(function() {
  $.validationEngineLanguage.newLang(localDomains);
  $("#user").validationEngine({
    success : function() { document.user.submit(); },
    failure : function() {}
  })
});
</script>

  <fieldset>
  <h2>パスワード変更</h2>
  <%- form_for(:user, :url => { :controller => 'users', :action => "pw_update", :id => @user.id}, 
              :html => {:id => 'user', :name=> "user" }) do |f| -%>
    <%= f.hidden_field :category, {:value => 2} -%>
    <div class="table-sys-a">
      <div class="item-mid2">ユーザＩＤ</div>
      <div class="input-mid2"><%= @user.login %></div>
      <div class="item-mid2">メールアドレス</div>
      <div class="input-mid2"><%= @user.email %></div>
      <div class="item-mid2">パスワード</div>
      <div class="input-mid2"><%= f.password_field :password %></div>
      <div class="item-mid2">パスワード（確認）</div>
      <div class="input-mid2"><%= f.password_field :password_confirmation -%>
</div>
      <div class="item-mid2"></div>
      <div class="input-mid2" align="center"><%= f.submit "　変更　" -%></div>
    </div>
  <%- end -%>
  </fieldset>

<br>
<div align=center>
<% if session[:target_for_back_id] -%>
<%= link_to "戻る", {:action => session[:target_for_back],
:id => session[:target_for_back_id]} %><br />
<% else -%>
<%= link_to "戻る", {:action => session[:target_for_back]} %><br />
<% end -%>
</div>
