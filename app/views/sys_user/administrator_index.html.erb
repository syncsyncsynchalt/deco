<script type="text/javascript">

localDomains = ""

$(document).ready(function() {
  $.validationEngineLanguage.newLang(localDomains);
  $("#user").validationEngine({
    success : function() { document.user.submit(); },
    failure : function() {}
  })
});
</script>

  <fieldset>
  <%- form_for(:user, :url => { :action => "create"}, 
              :html => {:id => 'user', :name=> "user" }) do |f| -%>
    <%= f.hidden_field :category, {:value => 1} -%>
    <div class="table-sys-a">
      <div class="item-mid2">ユーザＩＤ</div>
      <div class="input-mid2"><%= f.text_field :login, :size => '50',
 :class => 'validate[required]' %></div>
      <div class="item-mid2">パスワード</div>
      <div class="input-mid2"><%= f.text_field :crypted_password,
 :size => '50', :class => 'validate[required]' %></div>
      <div class="item-mid2">メールアドレス</div>
      <div class="input-mid2"><%= f.text_field :email, :size => '50',
 :class => 'validate[required]' %></div>
      <div class="item-mid2">備考</div>
      <div class="input-mid2"><%= f.text_area :note, :cols => '40',
 :rows => '10', :class => 'validate[required]' %></div>
      <div class="item-mid2"></div>
      <div class="input-mid2" align="center"><%= f.submit "　登録　" %></div>
    </div>
  <%- end -%>
  </fieldset>

  <fieldset>
  <h2>管理者一覧</h2>
  <div class="table-sys-a">
    <div class="item-mid3-1">ユーザＩＤ<br>メールアドレス</div>
    <div class="item-mid3-2">備考<br><br></div>
    <div class="item-mid3-3">　</div>
    <%- cnt = 0 -%>
    <% for user in @users -%>
      <%- cnt =+ 1 -%>
      <div class="input-mid3-1"><%= user.login %><br><%= user.email %></div>
      <div class="input-mid3-2"><%= user.note %></div>
      <div class="input-mid3-3"><%= link_to '[編集]', {:action => 'edit', :id => user.id } %>
      <%= link_to '[削除]', {:action => 'destroy', :id => user.id},
                             :confirm => '削除します。よろしいですか?', :method => :delete %></div>
    <%- end -%>
    <%- if cnt == 0 -%>
      <div class="input-mid3-1"><br></div>
      <div class="input-mid3-2">登録データがありません<br></div>
      <div class="input-mid3-3"><br></div>
    <%- end -%>
  </div>
  </fieldset>
